<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}</artifactId>
  <version>${version}</version>
  <packaging>jar</packaging>

  <name>MapReduce Driver</name>
  <description>Sample MapReduce Driver - run with 'bin/hadoop jar filename.jar'</description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <hadoop.releases.repo>http://repository.cloudera.com/releases</hadoop.releases.repo>
    <hadoop.snapshots.repo>http://repository.cloudera.com/snapshots</hadoop.snapshots.repo>
    <hadoop.groupId>com.cloudera.hadoop</hadoop.groupId>
    <hadoop.version>0.20.2-CDH.228</hadoop.version>

    <junit.version>4.8.1</junit.version>

    <maven-assembly-plugin.version>2.2-beta-5</maven-assembly-plugin.version>
    <maven-compiler-plugin.version>2.2</maven-compiler-plugin.version>
    <maven-jar-plugin.version>2.3</maven-jar-plugin.version>
  </properties>

  <repositories>
    <repository>
      <id>hadoop.releases.repo</id>
      <name>Cloudera Releases Repo</name>
      <url>${hadoop.releases.repo}</url>
      <releases>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>hadoop.snapshots.repo</id>
      <name>Cloudera Snapshots Repo</name>
      <url>${hadoop.snapshots.repo}</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
      </snapshots>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>${hadoop.groupId}</groupId>
      <artifactId>hadoop-core</artifactId>
      <version>${hadoop.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>${hadoop.groupId}</groupId>
      <artifactId>hadoop-examples</artifactId>
      <version>${hadoop.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${hadoop.groupId}</groupId>
      <artifactId>hadoop-mrunit</artifactId>
      <version>${hadoop.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>

      <!--
        The maven-assembly-plugin is used to construct the Hadoop
        executable jar. Dependencies in the 'runtime' scope are packaged
        in the lib directory of the jar.
      -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>${maven-assembly-plugin.version}</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase> <!-- append to the packaging phase. -->
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/main/assembly/driver.xml</descriptor>
              </descriptors>
              <archive>
                <manifest>
                  <mainClass>${package}.Driver</mainClass>
                </manifest>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
